<% layout("/layouts/boilerplate") %>

<h3 class="text-center mb-4">All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 justify-content-center">
  <% for (let listing of allListings) { %>
    <div class="col d-flex justify-content-center">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card shadow-sm border-0" style="width: 20rem;">
          <img
            src="<%= listing.image %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 20rem; object-fit: cover;"
          />
          <div class="card-body text-center">
            <p class="card-text mb-1">
              <strong><%= listing.title %></strong><br />
              &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night

            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

