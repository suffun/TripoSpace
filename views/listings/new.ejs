<% layout("/layouts/boilerplate") %>

<div class="form-container">
  <h3>Create a New Listing</h3>

  <form method="POST" action="/listings" novalidate class="needs-validation">
    <label for="title">Title</label>
    <input
      id="title"
      name="listing[title]"
      type="text"
      placeholder="Enter title"
      class="form-control was-validated"
      required
    />
    <div class="invalid-feedback">please enter a title</div>

    <label for="desc">Description</label>
    <textarea
      id="desc"
      name="listing[description]"
      placeholder="Enter description"
      class="form-control was-validated"
      required
    ></textarea>
    <div class="invalid-feedback">please enter a short description</div>

    <label for="image">Image URL</label>
    <input
      id="image"
      name="listing[image]"
      type="text"
      placeholder="Enter image URL"
    />

    <label for="price">Price (â‚¹)</label>
    <input
      id="price"
      name="listing[price]"
      type="number"
      placeholder="Enter price"
      class="form-control was-validated"
      required
    />
    <div class="invalid-feedback">please enter a correct price</div>

    <label for="country">Country</label>
    <input
      id="country"
      name="listing[country]"
      type="text"
      placeholder="Enter country"
      class="form-control was-validated"
      required
    />
    <div class="invalid-feedback">please enter a country name</div>

    <label for="location">Location</label>
    <input
      id="location"
      name="listing[location]"
      type="text"
      placeholder="Enter location"
      class="form-control was-validated"
      required
    />
    <div class="invalid-feedback"> enter location</div>

    <button type="submit">Add Listing</button>
  </form>
</div>

<style>
  :root {
    --accent: #ff385c;
    --accent-hover: #e31c5f;
    --bg: #f7f7f7;
    --text: #222;
    --border: #ddd;
  }

  body {
    font-family: "Plus Jakarta Sans", sans-serif;
    background-color: var(--bg);
    color: var(--text);
    margin: 0;
  }

  .form-container {
    background: #fff;
    border-radius: 1rem;
    padding: 2.5rem;
    width: 90%;
    max-width: 480px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    margin: 4rem auto;
    animation: fadeUp 0.6s ease forwards;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  h3 {
    text-align: center;
    color: var(--accent);
    font-weight: 700;
    margin-bottom: 2rem;
  }

  label {
    font-weight: 600;
    display: block;
    margin-bottom: 0.4rem;
  }

  input,
  textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border);
    border-radius: 0.6rem;
    font-family: inherit;
    font-size: 1rem;
    outline: none;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    margin-bottom: 1.25rem;
  }

  input:focus,
  textarea:focus {
    border-color: var(--accent);
    box-shadow: 0 0 6px rgba(255, 56, 92, 0.3);
  }

  textarea {
    resize: none;
    height: 100px;
  }

  button {
    width: 100%;
    background: var(--accent);
    color: #fff;
    font-weight: 600;
    font-size: 1rem;
    border: none;
    border-radius: 0.6rem;
    padding: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  button:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(255, 56, 92, 0.3);
  }

  button:active {
    transform: translateY(0);
    box-shadow: none;
  }
</style>
