<% layout("/layouts/boilerplate") %>

<div class="listing-container">
  <div class="listing-card">
    <img src="<%= listing.image %>" alt="<%= listing.title %>" class="listing-img" />

    <div class="listing-content">
      <h2 class="listing-title"><%= listing.title %></h2>
      <p class="listing-desc"><%= listing.description %></p>

      <div class="listing-meta">
        <p class="price">&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</p>
        <p class="location"><%= listing.location %>, <%= listing.country %></p>
      </div>

      <div class="listing-actions">
        <a href="/listings/<%= listing._id %>/edit" class="edit-btn">Edit Listing</a>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
          <button class="delete-btn">Delete Listing</button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    font-family: "Plus Jakarta Sans", sans-serif;
    background-color: #f7f7f7;
    margin: 0;
    padding: 0;
  }

  .listing-container {
    display: flex;
    justify-content: center;
    padding: 4rem 1rem;
  }

  .listing-card {
    background: #fff;
    border-radius: 1rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    max-width: 750px;
    width: 100%;
    overflow: hidden;
    animation: fadeUp 0.6s ease forwards;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .listing-img {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .listing-content {
    padding: 2rem;
  }

  .listing-title {
    color: #ff385c;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .listing-desc {
    color: #444;
    font-size: 1.05rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .listing-meta {
    font-size: 1rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .price {
    font-weight: 600;
    font-size: 1.2rem;
    color: #222;
  }

  .listing-actions {
    display: flex;
    gap: 1rem;
  }

  .edit-btn,
  .delete-btn {
    display: inline-block;
    padding: 0.8rem 1.2rem;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 0.6rem;
    cursor: pointer;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s ease;
  }

  .edit-btn {
    background-color: #ff385c;
    color: #fff;
  }

  .edit-btn:hover {
    background-color: #e31c5f;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 56, 92, 0.3);
  }

  .delete-btn {
    background-color: #f0f0f0;
    color: #555;
  }

  .delete-btn:hover {
    background-color: #ddd;
    transform: translateY(-2px);
  }

  form {
    display: inline;
  }

  @media (max-width: 768px) {
    .listing-card {
      max-width: 100%;
    }
    .listing-img {
      height: 250px;
    }
    .listing-content {
      padding: 1.5rem;
    }
  }
</style>
